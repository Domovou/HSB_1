@model IEnumerable<HSB.Models.Story>

@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";

}

    
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Headline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MyStory)
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr style="color: black; font-size: 22px">
           

            <td>
                <img src="@Url.Content(item.ImagePath)" alt="Image" width="150" height="150" />
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Headline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MyStory)
            </td>

        </tr>
}
    </tbody>
</table>
