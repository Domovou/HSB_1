@model HSB.Models.Story

@{
    ViewData["Title"] = "Slet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="height:90px"></div>

<h2 style="color:chocolate">Er du sikker?</h2>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Headline)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Headline)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MyStory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MyStory)
        </dd>
    </dl>


    <div style="height:65px"></div>

    <div>
        <img class="col-sm-3" src="@Url.Content(Model.ImagePath)" style="width:100%; height:80%"/>
    </div>

    <div style="margin-top: 50px">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ImagePath" />
            <input type="submit" value="Slet" class="btn btn-danger" style="margin-right: 30px"/>
            <button type="button" class="btn btn-info">
                <a asp-action="Index" style="color: white;">Tilbage</a>
            </button>
        </form>
    </div>
</div>
