@model HSB.Models.Story


@{
    ViewData["Title"] = "Detaljer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="height:55px"></div>

<h3>Historiens detaljer</h3>

<div>

    <hr />
    <dl class="row" style="font-size: 17px">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Headline)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Headline)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MyStory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MyStory)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
       
    </dl>
    <div>
        <img class="col-sm-6" src="@Url.Content(Model.ImagePath)" width="100%" height="100%"/>
    </div>
</div>
<div style="height:35px"></div>

<div style="margin-top: 50px">
    <button type="button" class="btn btn-warning" style="margin-right: 60px; background: #DF691A">
        <a asp-action="Edit" asp-route-id="@Model.ID">Rediger</a>
    </button>
    <button type="button" class="btn btn-info">
        <a asp-action="Index" style="color: white;">Tilbage</a>
    </button>
</div>
