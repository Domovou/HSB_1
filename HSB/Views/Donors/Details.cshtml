@model HSB.Models.Donor

@{
    ViewData["Title"] = "Detaljer";
}

<div style="height:55px"></div>


<div>
    <h3>Donor detaljer</h3>
    <div style="height:20px"></div>


    <div>
        <hr />
        <dl class="row" style="font-size: 18px">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PhoneNo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhoneNo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cpr)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cpr)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Conditions)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Conditions)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PrivacyNotice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PrivacyNotice)
            </dd>
        </dl>
    </div>
    <div style="height:35px"></div>
</div>
<div style="margin-top: 50px">
    <button type="button" class="btn btn-warning" style="margin-right: 60px; background: #DF691A">
        <a asp-action="Edit" asp-route-id="@Model.ID">Rediger</a>
    </button>
    <button type="button" class="btn btn-info">
        <a asp-action="Index" style="color: white;">Tilbage</a>
    </button>
</div>