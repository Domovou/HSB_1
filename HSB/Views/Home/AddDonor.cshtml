@model HSB.Models.Donor

@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}


<h4>Donor</h4>
<hr />
<div class="row" style="font-size: 13px">
    <div class="col-md-6">
        <form asp-action="AddDonor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNo" class="control-label"></label>
                <input asp-for="PhoneNo" class="form-control" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpr" class="control-label"></label>
                <input asp-for="Cpr" class="form-control" />
                <span asp-validation-for="Cpr" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PrivacyNotice" /> @Html.DisplayNameFor(model => model.PrivacyNotice)
                    <a href="~/uploads/pdf/LoremIpsum.pdf" class="font-weight-bold">  Læs om vores persondatapolitik her</a>
                    <span asp-validation-for="PrivacyNotice" class="text-danger"></span>
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Conditions" /> @Html.DisplayNameFor(model => model.Conditions)
<a href="~/uploads/pdf/LoremIpsum.pdf" class="font-weight-bold">  Læs vores vedtægter her</a>
                    <span asp-validation-for="Conditions" class="text-danger"></span>
                </label>
            </div>
            <div class="form-group" style="margin-top: 20px">

                <input type="submit" value="Gem" class="btn btn-primary" style="margin-left: 30px" />

                <button type="button" class="btn btn-info" style="margin-right: 40px">
                    <a asp-action="Index" style="color: white;">Tilbage</a>
                </button>
            </div>
        </form>
    </div>
</div>
